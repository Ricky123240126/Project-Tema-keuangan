<?php
session_start();
include 'connect.php';

if (!isset($_SESSION['id']) || !isset($_SESSION['transfer_nominal'])) {
    header('location: transfer.php');
    exit();
}

$user_id = $_SESSION['id'];

// Ambil data user dan PIN
$stmt = $connection->prepare("SELECT pin FROM users WHERE id = ?");
$stmt->bind_param("i", $user_id);
$stmt->execute();
$user = $stmt->get_result()->fetch_assoc();

if (!$user) {
    echo "<script>alert('Data user tidak ditemukan!'); window.location='menu_login.php';</script>";
    exit();
}

// Proses verifikasi PIN
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $pin_input = $_POST['pin'];
    
    // Validasi format PIN
    if (!preg_match('/^\d{6}$/', $pin_input)) {
        echo "<script>alert('PIN harus 6 digit angka!'); window.location='verifikasi_pin_transfer.php';</script>";
        exit();
    }
    
    // Cek kecocokan PIN
    if ($pin_input !== $user['pin']) {
        echo "<script>alert('PIN yang Anda masukkan salah!'); window.location='verifikasi_pin_transfer.php';</script>";
        exit();
    }
    
    // PIN benar, proses transfer
    $pengirim_id = $user_id;
    $penerima_id = $_SESSION['transfer_penerima_id'];
    $nominal = $_SESSION['transfer_nominal'];
    $catatan = $_SESSION['transfer_catatan'];
    
    // Ambil saldo pengirim
    $stmt = $connection->prepare("SELECT saldo FROM users WHERE id = ?");
    $stmt->bind_param("i", $pengirim_id);
    $stmt->execute();
    $row = $stmt->get_result()->fetch_assoc();
    $saldo_pengirim = $row['saldo'];
    
    // Double check saldo
    if ($saldo_pengirim < $nominal) {
        echo "<script>alert('Saldo tidak mencukupi!'); window.location='transfer.php';</script>";
        exit();
    }
    
    // Ambil saldo penerima
    $stmt = $connection->prepare("SELECT saldo FROM users WHERE id = ?");
    $stmt->bind_param("i", $penerima_id);
    $stmt->execute();
    $row = $stmt->get_result()->fetch_assoc();
    $saldo_penerima = $row['saldo'];
    
    $saldo_pengirim_baru = $saldo_pengirim - $nominal;
    $saldo_penerima_baru = $saldo_penerima + $nominal;
    
    // 1. Simpan transaksi pengirim
    $stmt = $connection->prepare("
        INSERT INTO transactions (user_id, jenis_transaksi, nominal, saldo_sebelum, saldo_sesudah, penerima_id, status)
        VALUES (?, 'transfer', ?, ?, ?, ?, 'success')
    ");
    $stmt->bind_param("idddi", $pengirim_id, $nominal, $saldo_pengirim, $saldo_pengirim_baru, $penerima_id);
    $stmt->execute();
    
    $transaction_id = $connection->insert_id;
    
    // 2. Simpan riwayat transfer
    $stmt = $connection->prepare("
        INSERT INTO transfer_history (transaction_id, pengirim_id, penerima_id, nominal, catatan)
        VALUES (?, ?, ?, ?, ?)
    ");
    $stmt->bind_param("iiids", $transaction_id, $pengirim_id, $penerima_id, $nominal, $catatan);
    $stmt->execute();
    
    // 3. Update saldo pengirim
    $stmt = $connection->prepare("UPDATE users SET saldo = ? WHERE id = ?");
    $stmt->bind_param("di", $saldo_pengirim_baru, $pengirim_id);
    $stmt->execute();
    
    // 4. Update saldo penerima
    $stmt = $connection->prepare("UPDATE users SET saldo = ? WHERE id = ?");
    $stmt->bind_param("di", $saldo_penerima_baru, $penerima_id);
    $stmt->execute();
    
    // Update session
    $_SESSION['saldo'] = $saldo_pengirim_baru;
    
    // Hapus session temporary
    unset($_SESSION['transfer_penerima_id']);
    unset($_SESSION['transfer_penerima_nama']);
    unset($_SESSION['transfer_penerima_email']);
    unset($_SESSION['transfer_nominal']);
    unset($_SESSION['transfer_catatan']);
    
    echo "<script>alert('Transfer Berhasil!'); window.location='dashboard.php';</script>";
    exit();
}
?>

